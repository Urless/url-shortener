<div class="row justify-content-center mt-5">
  <div class="col-12 col-md-4">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title fw-light">Create your account</h1>
        <p>Already have an account? <a href="/login">Login</a></p>
        <form method="POST" action="/register">

        {{!-- USERNAME --}}
          <div class="input-group mb-1">
            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
            <input type="text" name="username" value="{{user.username}}"
              class="form-control {{#if errors.username }}is-invalid{{/if}}" placeholder="Username">
            {{#if errors.username }}<div class="invalid-feedback">{{errors.username}}</div>{{/if}}
          </div>

          {{!-- EMAIL --}}
          <div class="input-group mb-1">
            <span class="input-group-text"><i class="bi bi-envelope-at-fill"></i></span>
            <input type="email" name="email" value="{{user.email}}"
              class="form-control {{#if errors.email }}is-invalid{{/if}}" placeholder="user@example.org">
            {{#if errors.email }}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}
          </div>

          <div class="input-group mb-1">
            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
            <input type="password" name="password" class="form-control {{#if errors.password }}is-invalid{{/if}}"
              placeholder="password">
            {{#if errors.password }}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
          </div>

          <div class="d-grid mt-2 gap-0">
            <button type="submit" class="btn btn-primary">Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>       {{!-- PASSWORD --}}
    